{% extends 'base.html.twig' %}

{% block title %}Surveys of {{ city.name }}{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <div class="text-center mb-8">
                    <h1 class="text-5xl font-bold text-base-content mb-2">
                        <i class="fa-solid fa-city text-primary"></i>
                        {{ city.name }}
                    </h1>
                    {% if city.zipCode is not null %}
                        <div class="badge badge-primary badge-lg">{{ city.zipCode }}</div>
                    {% endif %}
                    <div class="divider max-w-md mx-auto"></div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div class="card bg-base-200">
                        <div class="card-body">
                            <h2 class="card-title">
                                <i class="fa-solid fa-map-location-dot text-secondary"></i>
                                Location
                            </h2>
                            <div id="map" class="rounded-lg overflow-hidden">
                                {{ ux_map(
                                    map,
                                    attributes: {
                                        id: "map",
                                        class: 'rounded-lg overflow-hidden',
                                        style: 'height: 300px'
                                    }
                                ) }}
                            </div>
                        </div>
                    </div>

                    <div class="card bg-base-200">
                        <div class="card-body">
                            <h2 class="card-title">
                                <i class="fa-solid fa-chart-line text-accent"></i>
                                Weather Data
                            </h2>
                            <div class="mt-4">
                                {{ render_chart(chart) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
