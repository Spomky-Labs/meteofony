{% extends 'base.html.twig' %}

{% block title %}Community Weather Reports{% endblock %}

{% block bodytags %}class="bg-gradient-to-br from-primary to-secondary min-h-screen"{% endblock %}

{% block body %}
    <div class="hero min-h-screen bg-transparent text-primary-content">
        <div class="hero-content flex-col lg:flex-row-reverse max-w-7xl">
            <div class="flex-1">
                <img src="{{ asset('images/hero.svg') }}" class="max-w-sm md:max-w-lg mx-auto drop-shadow-2xl" alt="Weather illustration" />
            </div>
            <div class="flex-1">
                <div class="badge badge-lg badge-accent mb-4">What's the weather like?</div>
                <h1 class="text-6xl font-bold leading-tight mb-6">
                    Community Weather Reports
                </h1>
                <p class="text-xl mb-8 opacity-90">
                    Join our community of weather enthusiasts! Share real-time weather data from your personal stations and access comprehensive meteorological information from across France.
                </p>
                <div class="flex flex-wrap gap-4">
                    {% if not is_granted('ROLE_USER') %}
                        <a href="{{ path('app_login') }}" class="btn btn-accent btn-lg gap-2">
                            <i class="fa-solid fa-right-to-bracket"></i>
                            Log in
                        </a>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_dashboard') }}" class="btn btn-accent btn-lg gap-2">
                            <i class="fa-solid fa-gauge"></i>
                            Dashboard
                        </a>
                        <a href="{{ path('app_profile') }}" class="btn btn-outline btn-accent btn-lg gap-2">
                            <i class="fa-solid fa-user"></i>
                            Profile
                        </a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin') }}" class="btn btn-warning btn-lg gap-2">
                            <i class="fa-solid fa-shield-halved"></i>
                            Admin
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <section class="py-20 bg-base-100">
        <div class="container max-w-6xl mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-5xl font-bold text-base-content mb-4">
                    Save, Share, Collaborate!
                </h2>
                <div class="divider max-w-xs mx-auto"></div>
            </div>

            <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
                <div data-aos="fade-right">
                    <h3 class="text-4xl font-bold text-base-content mb-4">
                        Real-time Data Collection
                    </h3>
                    <p class="text-lg text-base-content/70 leading-relaxed">
                        Connect your personal weather station and contribute to our growing network. Monitor temperature, humidity, wind speed, and more with precision instruments.
                    </p>
                </div>
                <div data-aos="fade-left">
                    <img src="{{ asset('images/Weather-rafiki.svg') }}" alt="Weather data collection" class="w-full max-w-md mx-auto drop-shadow-lg">
                </div>
            </div>

            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div data-aos="fade-right" class="order-2 md:order-1">
                    <img src="{{ asset('images/Windy-day-bro.svg') }}" alt="Weather analysis" class="w-full max-w-md mx-auto drop-shadow-lg">
                </div>
                <div data-aos="fade-left" class="order-1 md:order-2">
                    <h3 class="text-4xl font-bold text-base-content mb-4">
                        Advanced Analytics
                    </h3>
                    <p class="text-lg text-base-content/70 leading-relaxed">
                        Access historical trends, generate custom reports, and make informed decisions based on comprehensive weather data from across France.
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section class="py-20 bg-base-200">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-5xl font-bold text-base-content mb-4">
                    Key Features
                </h2>
                <div class="divider max-w-xs mx-auto"></div>
            </div>

            <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
                    <div class="card-body">
                        <div class="badge badge-primary mb-2">Getting Started</div>
                        <h3 class="card-title text-2xl">Easy Setup</h3>
                        <p>Connect your weather station in minutes with our intuitive setup wizard and start sharing data immediately.</p>
                        <div class="card-actions justify-end mt-4">
                            <a href="{{ path('app_login') }}" class="btn btn-primary">Get Started</a>
                        </div>
                    </div>
                </div>

                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
                    <div class="card-body">
                        <div class="badge badge-secondary mb-2">Community</div>
                        <h3 class="card-title text-2xl">Data Sharing</h3>
                        <p>Join a network of weather enthusiasts and access real-time data from stations across France.</p>
                        <div class="card-actions justify-end mt-4">
                            <a href="{{ path('app_login') }}" class="btn btn-secondary">Explore Data</a>
                        </div>
                    </div>
                </div>

                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
                    <div class="card-body">
                        <div class="badge badge-accent mb-2">API Access</div>
                        <h3 class="card-title text-2xl">Developer Tools</h3>
                        <p>Integrate weather data into your applications with our powerful RESTful API and comprehensive documentation.</p>
                        <div class="card-actions justify-end mt-4">
                            <a href="{{ path('api_doc') }}" class="btn btn-accent">View API</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="py-20 bg-base-100">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-5xl font-bold text-base-content mb-4">
                    Simple, Transparent Pricing
                </h2>
                <div class="divider max-w-xs mx-auto"></div>
            </div>

            <div class="flex justify-center">
                <div class="card w-96 bg-base-100 shadow-2xl border-2 border-primary">
                    <div class="card-body">
                        <div class="text-center">
                            <h3 class="text-3xl font-bold mb-4 text-primary">Free Forever</h3>
                            <div class="py-6">
                                <span class="text-5xl font-bold">0â‚¬</span>
                                <span class="text-base-content/70">/user</span>
                            </div>
                        </div>

                        <ul class="space-y-4 mb-6">
                            <li class="flex items-center gap-3">
                                <i class="fa-solid fa-check text-success text-xl"></i>
                                <span>Unlimited data consultation</span>
                            </li>
                            <li class="flex items-center gap-3">
                                <i class="fa-solid fa-check text-success text-xl"></i>
                                <span>Add your weather data</span>
                            </li>
                            <li class="flex items-center gap-3">
                                <i class="fa-solid fa-check text-success text-xl"></i>
                                <span>Full API access</span>
                            </li>
                            <li class="flex items-center gap-3">
                                <i class="fa-solid fa-check text-success text-xl"></i>
                                <span>Community support</span>
                            </li>
                        </ul>

                        <div class="card-actions justify-center">
                            {% if not is_granted('ROLE_USER') %}
                                <a href="{{ path('app_login') }}" class="btn btn-primary btn-wide btn-lg">Get Started</a>
                            {% else %}
                                <a href="{{ path('app_dashboard') }}" class="btn btn-primary btn-wide btn-lg">Go to Dashboard</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="py-20 bg-gradient-to-br from-primary to-secondary text-primary-content">
        <div class="container mx-auto px-4">
            <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-5xl font-bold mb-6">
                    Join Our Community Today
                </h2>
                <div class="divider before:bg-primary-content/20 after:bg-primary-content/20"></div>
                <p class="text-2xl mb-8 opacity-90">
                    Share information from your weather stations and help build the most comprehensive weather network in France
                </p>
                <a href="{{ path('app_login') }}" class="btn btn-accent btn-lg gap-2">
                    <i class="fa-solid fa-user-plus"></i>
                    Join Now!
                </a>
            </div>
            <div class="mt-12">
                <img src="{{ asset('images/team-spirit-animate.svg') }}" alt="Team spirit" class="max-w-md mx-auto drop-shadow-2xl">
            </div>
        </div>
    </section>
{% endblock %}
