{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block content %}
    <section class="h-screen">
        <div class="px-6 h-full text-gray-800">
            <div class="flex xl:justify-center lg:justify-between justify-center items-center flex-wrap h-full g-6">
                <div class="grow-0 shrink-1 md:shrink-0 basis-auto xl:w-6/12 lg:w-6/12 md:w-9/12 mb-12 md:mb-0">
                    <img
                        src="{{ asset('build/images/undraw_forgot_password_re_hxwm.svg') }}"
                        class="w-full"
                        alt="Sample image"
                    />
                </div>
                <div class="xl:ml-20 xl:w-5/12 lg:w-5/12 md:w-8/12 mb-12 md:mb-0">
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    {{ form_start(requestForm) }}
                    <div class="mb-6">
                        {{ form_label(requestForm.username) }}
                        {{ form_widget(requestForm.username, {attr: {autofocus: 'autofocus', class: 'form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}}) }}
                    </div>
                    <div>
                        <p>
                            Enter your email address, and we'll send you
                            the procedure for resetting your password.
                        </p>
                    </div>


                    <div class="text-center lg:text-left">
                        <button type="submit" class="mx-auto lg:mx-0 hover:underline font-bold rounded-full mt-4 lg:mt-0 py-4 px-8 shadow opacity-75 focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out bg-white text-gray-800">Valider</button>
                        <p class="text-sm font-semibold mt-2 pt-1 mb-0">
                            <a href="{{ path('app_login') }}">Return to the login page</a>
                        </p>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
