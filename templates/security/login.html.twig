{% extends 'base.html.twig' %}

{% block title %}Login !{% endblock %}

{% block content %}

    <section class="h-screen">
        <div class="px-6 h-full text-gray-800">
            <div class="flex xl:justify-center lg:justify-between justify-center items-center flex-wrap h-full g-6">
                <div class="grow-0 shrink-1 md:shrink-0 basis-auto xl:w-6/12 lg:w-6/12 md:w-9/12 mb-12 md:mb-0">
                    <img
                        src="{{ asset('images/Authentication-bro.svg') }}"
                        class="w-5/6"
                        alt="Sample image"
                    />
                </div>
                <div class="xl:ml-20 xl:w-5/12 lg:w-5/12 md:w-8/12 mb-12 md:mb-0">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="mb-6">
                            <label for="inputUsername">Username</label>
                            <input
                                type="text"
                                value="{{ last_username }}"
                                name="username"
                                id="inputUsername" autocomplete="username" required autofocus
                                class="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                                placeholder="Username"
                            />
                        </div>
                        <div class="mb-6">
                            <label for="inputPassword">Password</label>
                            <input
                                type="password"
                                name="password"
                                id="inputPassword"
                                autocomplete="current-password"
                                required
                                class="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                                placeholder="Password"
                            />
                        </div>

                        <div class="flex justify-between items-center mb-6">
                            <a href="{{ path('app_forgot_password_request') }}" class="text-gray-800">I forgot my password</a>
                        </div>

                        <div class="text-center lg:text-left">
                            <button
                                type="submit"
                                class="mx-auto lg:mx-0 hover:underline font-bold rounded-full mt-4 lg:mt-0 py-4 px-8 shadow opacity-75 focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out bg-white text-gray-800"
                            >
                                Login
                            </button>
                            <p class="text-sm font-semibold mt-2 pt-1 mb-0">
                                Don't have an account?
                                Contact us!
                            </p>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </form>
                </div>
                <div class="xl:ml-20 xl:w-5/12 lg:w-5/12 md:w-8/12 mb-12 md:mb-0">
                    <form
                        {{ stimulus_controller('@web-auth/webauthn-stimulus',
                            {
                                requestResultUrl: path('webauthn.controller.security.main.request.result'),
                                requestOptionsUrl: path('webauthn.controller.security.main.request.options')
                            }
                        ) }}
                    >
                        <div class="mb-6">
                            <label for="inputUsername">Username</label>
                            <input
                                type="text"
                                value="{{ last_username }}"
                                name="username"
                                id="inputUsername" autocomplete="username"
                                class="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                                placeholder="Username"
                            />
                        </div>

                        <div class="text-center lg:text-left">
                            <button
                                {{ stimulus_action('@web-auth/webauthn-stimulus', 'signin') }}
                                type="submit"
                                class="mx-auto lg:mx-0 hover:underline font-bold rounded-full mt-4 lg:mt-0 py-4 px-8 shadow opacity-75 focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out bg-white text-gray-800"
                            >
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
