
<div class="navbar bg-base-100 shadow-lg fixed top-0 z-50 border-b border-base-200">
    <div class="navbar-start">
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
                </svg>
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('app_profile') }}"><i class="fa-solid fa-user"></i> Profile</a></li>
                    <li><a href="{{ path('app_dashboard') }}"><i class="fa-solid fa-gauge"></i> Dashboard</a></li>
                    <li><a href="{{ path('api_doc') }}"><i class="fa-solid fa-code"></i> API</a></li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('app_admin') }}"><i class="fa-solid fa-shield-halved"></i> Admin</a></li>
                {% endif %}
            </ul>
        </div>
        <a href="{{ path('app_homepage') }}" class="btn btn-ghost text-xl">
            <i class="fa-solid fa-cloud-sun text-primary"></i>
            <span class="font-bold text-primary">Météofony</span>
        </a>
    </div>

    <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
            {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('app_profile') }}" class="text-base"><i class="fa-solid fa-user"></i> Profile</a></li>
                <li><a href="{{ path('app_dashboard') }}" class="text-base"><i class="fa-solid fa-gauge"></i> Dashboard</a></li>
                <li><a href="{{ path('api_doc') }}" class="text-base"><i class="fa-solid fa-code"></i> API</a></li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('app_admin') }}" class="text-base"><i class="fa-solid fa-shield-halved"></i> Admin</a></li>
            {% endif %}
        </ul>
    </div>

    <div class="navbar-end">
        {% if is_granted('ROLE_USER') %}
            <form action="{{ logout_path('main') }}" method="post">
                <button class="btn btn-primary btn-sm">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    Logout
                </button>
            </form>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-primary btn-sm">
                <i class="fa-solid fa-right-to-bracket"></i>
                Login
            </a>
        {% endif %}
    </div>
</div>
